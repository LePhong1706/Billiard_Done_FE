@model CheckoutViewModel
@{
    ViewData["Title"] = "Thanh toán";
}

@section Styles {
    <style>
        body {
            background-color: #1E1F23;
            color: #EEEEEE;
        }

        .checkout-container {
            max-width: 1200px;
            margin: 40px auto;
            padding: 20px;
        }

        .checkout-title {
            color: #FFFFFF;
            font-weight: 700;
            margin-bottom: 30px;
        }

        .form-control, .form-select {
            background-color: #25262B;
            border: 1px solid #2A2B30;
            color: #EEEEEE;
            border-radius: 6px;
            padding: 12px 15px;
        }

        .form-control:focus, .form-select:focus {
            background-color: #25262B;
            border-color: #DF3B34;
            color: #EEEEEE;
            box-shadow: none;
        }

        .form-label {
            color: #FFFFFF;
            font-weight: 600;
            margin-bottom: 8px;
        }

        .checkout-card {
            background-color: #25262B;
            border: 1px solid #2A2B30;
            border-radius: 8px;
            padding: 30px;
        }

        .checkout-card .card-title {
            color: #FFFFFF;
            font-weight: 700;
            margin-bottom: 20px;
        }

        .order-summary-item {
            display: flex;
            justify-content: space-between;
            margin-bottom: 15px;
        }

        .order-summary-item .product-name {
            font-weight: 600;
        }

        .order-summary-item .product-quantity {
            color: #808080;
        }

        .summary-row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 15px;
        }

        .summary-total {
            font-size: 22px;
            font-weight: 700;
            color: #DF3B34;
        }

        .btn-place-order {
            background-color: #DF3B34;
            color: #FFFFFF;
            font-weight: 600;
            text-transform: uppercase;
            padding: 15px;
            border-radius: 6px;
            text-align: center;
            display: block;
            width: 100%;
            text-decoration: none;
            transition: background-color 0.3s;
            border: none;
        }

        .btn-place-order:hover {
            background-color: #FF7B6E;
        }

        .btn-back-to-cart {
            color: #EEEEEE;
            text-decoration: none;
            font-weight: 600;
            transition: color 0.3s;
        }

        .btn-back-to-cart:hover {
            color: #DF3B34;
        }

    </style>
}

<div class="checkout-container">
    <h2 class="checkout-title">Thanh toán</h2>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <form method="post" asp-action="PlaceOrder">
        <div class="row">
            <div class="col-lg-7">
                <div class="checkout-card mb-4">
                    <h5 class="card-title">Thông tin giao hàng</h5>
                    
                    <div class="mb-3">
                        <label for="TenNguoiNhan" class="form-label">Họ và tên <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="TenNguoiNhan" name="TenNguoiNhan" required>
                    </div>

                    <div class="mb-3">
                        <label for="SoDienThoai" class="form-label">Số điện thoại <span class="text-danger">*</span></label>
                        <input type="tel" class="form-control" id="SoDienThoai" name="SoDienThoai" required>
                    </div>

                    <div class="mb-3">
                        <label for="DiaChiGiaoHang" class="form-label">Địa chỉ giao hàng <span class="text-danger">*</span></label>
                        <textarea class="form-control" id="DiaChiGiaoHang" name="DiaChiGiaoHang" rows="3" required></textarea>
                    </div>

                    <div class="mb-3">
                        <label for="GhiChu" class="form-label">Ghi chú (tùy chọn)</label>
                        <textarea class="form-control" id="GhiChu" name="GhiChu" rows="2"></textarea>
                    </div>
                </div>
            </div>

            <div class="col-lg-5">
                <div class="checkout-card">
                    <h5 class="card-title">Đơn hàng của bạn</h5>
                    
                    @foreach (var item in Model.Items)
                    {
                        <div class="order-summary-item">
                            <div>
                                <div class="product-name">@item.TenSanPham</div>
                                <small class="product-quantity">Số lượng: @item.SoLuong</small>
                            </div>
                            <div class="text-end">
                                <div>@item.ThanhTien.ToString("N0") đ</div>
                            </div>
                        </div>
                    }

                    <hr style="border-color: #2A2B30;">
                    <div class="summary-row">
                        <span>Tạm tính:</span>
                        <strong>@Model.SubTotal.ToString("N0") đ</strong>
                    </div>
                    <div class="summary-row">
                        <span>Phí vận chuyển:</span>
                        <strong>@(Model.ShippingFee == 0 ? "Miễn phí" : Model.ShippingFee.ToString("N0") + " đ")</strong>
                    </div>
                    <hr style="border-color: #2A2B30;">
                    <div class="summary-row">
                        <strong>Tổng cộng:</strong>
                        <strong class="summary-total">@Model.Total.ToString("N0") đ</strong>
                    </div>
                </div>
                
                <div class="d-flex justify-content-between align-items-center mt-4">
                    <a href="@Url.Action("Index", "Cart")" class="btn-back-to-cart">
                        <i class="bi bi-arrow-left"></i> Quay lại giỏ hàng
                    </a>
                    <button type="submit" class="btn-place-order" style="width: auto;">
                        Đặt hàng <i class="bi bi-arrow-right"></i>
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>